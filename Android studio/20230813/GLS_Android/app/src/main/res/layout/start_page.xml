<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="无人车集群多功能安卓APP"
            android:textColor="#000000"
            android:textSize="25sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/car1_ip_text"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:text="car1 IP："
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/car1_ip_edit"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-28dp"
                android:layout_toRightOf="@id/car1_ip_text"
                android:inputType="text"
                android:text="192.168.1.148"
                android:maxLength="20"
                android:textColor="@color/black"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/car1_port_text"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:text="car1 Port："
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/car1_port_edit"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-28dp"
                android:layout_toRightOf="@id/car1_port_text"
                android:inputType="text"
                android:text="7070"
                android:maxLength="20"
                android:textColor="@color/black"
                android:textSize="17sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/car2_ip_text"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:text="car2 IP："
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/car2_ip_edit"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-28dp"
                android:layout_toRightOf="@id/car2_ip_text"
                android:inputType="text"
                android:text="192.168.1.2"
                android:maxLength="20"
                android:textColor="@color/black"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/car2_port_text"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:text="car2 Port："
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/car2_port_edit"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-28dp"
                android:layout_toRightOf="@id/car2_port_text"
                android:inputType="text"
                android:text="8080"
                android:maxLength="20"
                android:textColor="@color/black"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/car2_x_text"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:text="X："
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/car2_x_edit"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-68dp"
                android:layout_toRightOf="@id/car2_x_text"
                android:inputType="text"
                android:text="999"
                android:maxLength="20"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/car2_y_text"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-45dp"
                android:layout_toRightOf="@id/car2_x_edit"
                android:gravity="center"
                android:text="Y："
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/car2_y_edit"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-68dp"
                android:layout_toRightOf="@id/car2_y_text"
                android:inputType="text"
                android:text="999"
                android:maxLength="20"
                android:textColor="@color/black"
                android:textSize="17sp" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/car3_ip_text"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:text="car3 IP："
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/car3_ip_edit"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-28dp"
                android:layout_toRightOf="@id/car3_ip_text"
                android:inputType="text"
                android:text="192.168.1.3"
                android:maxLength="20"
                android:textColor="@color/black"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/car3_port_text"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:text="car3 Port："
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/car3_port_edit"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-28dp"
                android:layout_toRightOf="@id/car3_port_text"
                android:inputType="text"
                android:text="9090"
                android:maxLength="20"
                android:textColor="@color/black"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/car3_x_text"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:text="X："
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/car3_x_edit"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-68dp"
                android:layout_toRightOf="@id/car3_x_text"
                android:inputType="text"
                android:text="999"
                android:maxLength="20"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/car3_y_text"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-45dp"
                android:layout_toRightOf="@id/car3_x_edit"
                android:gravity="center"
                android:text="Y："
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/car3_y_edit"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-68dp"
                android:layout_toRightOf="@id/car3_y_text"
                android:inputType="text"
                android:text="999"
                android:maxLength="20"
                android:textColor="@color/black"
                android:textSize="17sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/start_system_btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="158dp"
            android:text="启动"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>